# Project Euler. Problem 1

count = 0
for i in range(1, 1000):
    if i % 3 == 0 or i % 5 == 0:
        count += i

print(count)

# Project Euler. Problem 2

fib_nums = [1, 2]
i = 1
fib = 0
while fib < 4000000:
    fib = fib_nums[i] + fib_nums[(i - 1)]
    fib_nums.append(fib)
    i += 1
count = 0
for i in fib_nums:
    if i % 2 == 0:
        count += i
print(count)
